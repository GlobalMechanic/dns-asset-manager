<p id="notice"><%= notice %></p>

<%= link_to 'Back to Clips', clips_path %>
<%= link_to 'Edit Clip', edit_clip_path(@clip) %>

<h1><%= @clip.title %></h1>

<div class="clip">
  <div class="meta">
    <img src="<%= @clip.image %>" />
    <div><strong>Title:</strong> <%= @clip.title %></div>
    <div><strong>Username:</strong> <%= @clip.name %></div>
    <div><strong>Description:</strong></div>
    <div><%= @clip.description %></div>
  </div>
  <video src="<%= @clip.video %>" controls></video>
  <div>
    <strong>Versions:</strong>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Action</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
      <% @clip.versions.reverse.each do |version| %>
        <tr>
          <td><%= version.id %></td>
          <td><%= version.event %></td>
          <td><%= version.created_at %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <% if @clip.thumbnail? %>
  <div>
  	<strong>Image:</strong>
  	<%= image_tag @clip.thumbnail.url %>
  </div>
  <% end %>
</div>
