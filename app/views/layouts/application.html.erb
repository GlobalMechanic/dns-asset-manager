<!DOCTYPE html>
<html>
<head>
  <title>Asset Manager</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <script type="text/javascript">
    var gm = gm || {
      controller: '<%= params[:controller] %>',
      action: '<%= params[:action] %>'
    };
    <% if current_user %>
    gm.current_reel_slug = '<%= current_user.current_reel_slug? ? current_user.current_reel_slug : 'null' %>';
    <% end %>
  </script>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="controller-<%= params[:controller].parameterize %> action-<%= params[:action].parameterize %>">
  <div class="container">
    <% if user_signed_in? %>
    <header class="top-bar">
    <nav class="row">
      <div class="row">
        <ul id="primary">
        <!-- <li><%# link_to 'Episodes', episodes_path %></li> -->
        <% if can? :manage, User %>
        <li><%= link_to 'Users', users_path %></li>
        <% end %>
        <!-- <li><%= link_to "Edit #{current_user.name}", edit_user_registration_path %></li> -->
        <!-- <li><%= link_to 'Edit User', edit_user_path(current_user) %></li> -->
        <li><%= link_to 'Sign out', destroy_user_session_path, :method => 'delete' %></li>
        </ul>
        <ul id="secondary">
        <li>
        <% if @current_reel && @current_reel.title? %>
          Now viewing: <%= link_to @current_reel.title, edit_reel_path(@current_reel) %> <%= link_to 'Ã—', close_reel_path(@current_reel) %>
        <% else %>
          <%= link_to 'Create my Reel', edit_reel_path(@current_reel), :id => 'create-reel', :class => (@current_reel.assets.length > 0 ? 'show' : '') %>
          <%= form_for @current_reel do |f| %>
            <%= link_to 'tmp: Download', assets_path, :class => 'button' %>
            <%= f.text_field :title, :placeholder => 'Reel name' %>
            <%= f.submit 'Save Reel' %>
          <% end %>
        <% end %>
        </li>
        </ul>
        <div class="drawer">
        <%= link_to 'Recent Reels', reels_path, :id => 'open-reel' %>
        <div class="reels eight columns">
          <div class="four columns alpha">
            <div class="title">Recently Created</div>
            <ul class="disc">
              <% if @reels_created.count > 0 %>
                <% @reels_created.each do |reel| %>
                  <li><%= link_to reel.title, open_reel_path(reel) %> <%= time_ago_in_words(reel.created_at) %></li>
                <% end %>
              <% else %>
                <li>No reels yet</li>
              <% end %>
            </ul>
          </div>
          <div class="four columns omega">
            <div class="title">Recently Updated</div>
            <ul class="disc">
              <% if @reels_created.count > 0 %>
                <% @reels_updated.each do |reel| %>
                  <li><%= link_to reel.title, open_reel_path(reel) %> <%= time_ago_in_words(reel.updated_at) %></li>
                <% end %>
              <% else %>
                <li>No reels yet</li>
              <% end %>
            </ul>
          </div>
          <div class="eight columns beta"><%= link_to 'All Reels', reels_path, :class => 'button' %></div>
        </div>
        </div>
      </div>

      <div class="row utilities"> 
        <div class="filters" id="asset-filters">
        <ul>
          <li><a href="#filter-by">Assets</a></li>
          <li><%= link_to 'All assets', assets_path, :class => (params[:controller] == 'assets' && params[:action] == 'index' ? 'active' : '') %></li>
          <% Asset::TYPES.each do |type| %>
          <li><%= link_to type[0],  type_assets_path(type[1]), :class => (params[:controller] == 'assets' && params[:action] == 'type' && params[:asset_type] == type[1] ? 'active' : '') %></li>
          <% end %>
        </ul>
        </div>

        <div class="filters" id="episode-filters">
        <ul>
          <li><%= link_to 'Episodes', episodes_path %></li>
          <% Episode.all.each do |episode| %>
          <li><%= link_to episode.number.pad + ' - ' + episode.title, episode %></li>
          <% end %>
          <li></li>
        </ul>
        </div>

        <% if @search %>
        <div id="asset-search">
          <%= form_for @search, :url => url_for(:only_path => false) do |f| %>
            <%= f.text_field :title_or_description_or_keywords_taggings_tag_name_contains, :placeholder => 'Search' %>
          <% end %>
        </div>
        <% end %>

      </div>
    </nav>
  </header>
    <% end %>
    <%= content_tag :p, notice, :class => 'notice' if notice %>
    <%= content_tag :p, alert, :class => 'alert' if alert %>
    <%= content_tag :h2, @title if @title %>
    <%= yield %>
  </div>
  <div id="upload-form">
    <div class="inner">
      <h3>New Asset</h3>
      <%= form_for Asset.new, :html => { :multipart => true } do |f| %>
        <div class="field row">
          <%# f.label :asset, 'Choose a file or drag and drop' %>
          <label for="asset_asset">
          <span class="button">Choose a file</span> or drag and drop
          <%= f.file_field :asset, multiple: true, name: "asset[asset]" %>
          </label>
        </div>
      <% end %>
      <div class="batch">
        <form id="batch-form">
            <%= render :partial => 'shared/asset-form' %>
        </form>
        <div class="asset-uploads"></div>
        <div class="field row">
          <%= submit_tag 'Save and Close', :id => 'update-uploads' %>
        </div>
      </div>
    </div>
  </div>
  <script id="template-upload" type="text/x-tmpl">
  <div class="row">
    <header>
      <div class="image"></div>
      <div class="title">
        <div>{%= o.name %}</div>
        <div class="progress progress-striped active"><div class="bar" style="width: 0%;"></div></div>
      </div>
    </header>
    <form class="override">
      <%= render :partial => 'shared/asset-form' %>
    </form>
  </div>
  </script>
</body>
</html>
