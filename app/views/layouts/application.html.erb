<!DOCTYPE html>
<html>
<head>
  <title>Asset Manager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <script type="text/javascript">
    var gm = gm || {};
    gm.current_reel_id = <%= current_user.current_reel_id? ? current_user.current_reel_id : 'null' %>;
  </script>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
    <nav id="primary">
      <ul>
        <% if current_user.current_reel_id? %>
        <li>Reel <%= current_user.current_reel_id %></li>
        <% end %>
        <li><%= link_to 'Clips', clips_path %></li>
        <li><%= link_to 'Reels', reels_path %></li>
        <li><%= link_to 'Users', users_path %></li>
        <li><%= link_to "Edit #{current_user.name}", edit_user_registration_path %></li>
        <li><%= link_to 'Edit User', edit_user_path(current_user) %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, :method => 'delete' %></li>
      </ul>
    </nav>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
