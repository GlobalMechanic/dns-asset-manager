<div class="tray reel">
  <div class="inside">
    <h3><%= @reel.title %></h3>
    <%= content_tag(:p, @reel.description) if @reel.description? %>
  </div>
</div>

<div class="assets clearfix">
<%= content_tag(:p, 'No assets yet.') unless @assets.length > 0 %>
<% @assets.each_with_index do |asset, index| %>
  <% if index % 4 === 0 && index != 0 %>
  </div>
  <div class="assets clearfix">
  <% end %>

  <div id="asset-<%= asset.id %>" class="asset">
    <a href="#">
      <img class="default" draggable="false" src="http://globalmechanic.com/asset/thumbnails/<%= asset.image %>" alt="<%= asset.title %>" width="188" height="106" >
      <div class="text"><%= asset.title %></div>
    </a>
  </div>

<% end %>
</div>
