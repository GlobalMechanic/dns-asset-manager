<h2>Scenes - <%= @episode.number.pad %> - <%= @episode.title %></h2>

<div id="tabs">
  <%= link_to 'Designs', @episode, :class => 'item' %>
  <%= link_to 'Scenes', episode_scenes_path(@episode), :class => 'item active' %>
</div>

<% assets = [] %>
<% @scenes.each_with_index do |scene, index| %>
  <% if scene.assets.length > 0 %>
    <% scene.assets.each do |asset| %>
      <% assets << asset %>
    <% end %>
  <% end %>
<% end %>
<%= render :partial => 'shared/assets', :locals => { :assets => assets } %>


<% if false and can? :create, Scene %>
<h3 class="result-headers result-new clearfix"><span class="actions"><%= link_to 'New scene', new_episode_scene_path(@episode) %></span></h3>
<% end %>
